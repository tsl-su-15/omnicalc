  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Loan Payment Results</h3>
    </div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <dt>APR</dt>
        <dd><%= @loan_payment.apr %>%</dd>

        <dt>Number of years</dt>
        <dd><%= @loan_payment.years %></dd>

        <dt>Principal</dt>
        <dd><%= number_to_currency(@loan_payment.principal) %></dd>

        <dt>Monthly Payment</dt>
        <dd><%= number_to_currency(@loan_payment.monthly_payment) %></dd>
      </dl>
    </div>
  </div>

